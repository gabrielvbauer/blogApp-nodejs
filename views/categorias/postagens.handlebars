<h2>{{categoria.nome}}</h2>

{{#each postagens}}
<div class="card mt-3">
  <div class="card-body">
    <h4>{{titulo}}</h4>
    <p>{{descricao}}</p>
    <div class="container">
      <div class="row mt-3">
        <a href="/postagem/{{slug}}"><button class="btn
            btn-success">Leia mais</button>
        </a>
      </div>
    </div>
  </div>
</div>
{{else}}
<div class="card mt-3">
  <div class="card-body">
    <div class="text-center">
      <h3>Nenhuma postagem registrada</h3>
    </div>
  </div>
</div>
{{/each}}